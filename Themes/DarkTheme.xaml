<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background -->
    <SolidColorBrush x:Key="WindowBrush" Color="#0D1117"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#161B22"/>
    <SolidColorBrush x:Key="CardBrush" Color="#1C2129"/>
    <SolidColorBrush x:Key="CardHoverBrush" Color="#22272E"/>

    <!-- Foreground -->
    <SolidColorBrush x:Key="ForegroundBrush" Color="#E6EDF3"/>
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#8B949E"/>
    <SolidColorBrush x:Key="DimForegroundBrush" Color="#484F58"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="SubtleBorderBrush" Color="#21262D"/>

    <!-- Accent -->
    <SolidColorBrush x:Key="AccentBrush" Color="#58A6FF"/>
    <SolidColorBrush x:Key="AccentDimBrush" Color="#1F6FEB"/>

    <!-- Severity -->
    <SolidColorBrush x:Key="OkBrush" Color="#3FB950"/>
    <SolidColorBrush x:Key="OkDimBrush" Color="#238636"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#D29922"/>
    <SolidColorBrush x:Key="WarningDimBrush" Color="#9E6A03"/>
    <SolidColorBrush x:Key="CriticalBrush" Color="#F85149"/>
    <SolidColorBrush x:Key="CriticalDimBrush" Color="#DA3633"/>

    <!-- Progress bar backgrounds -->
    <SolidColorBrush x:Key="BarBackgroundBrush" Color="#21262D"/>

    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollBarBrush" Color="#484F58"/>

</ResourceDictionary>
