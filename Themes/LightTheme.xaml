<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background -->
    <SolidColorBrush x:Key="WindowBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#F6F8FA"/>
    <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardHoverBrush" Color="#F3F4F6"/>

    <!-- Foreground -->
    <SolidColorBrush x:Key="ForegroundBrush" Color="#1F2328"/>
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#656D76"/>
    <SolidColorBrush x:Key="DimForegroundBrush" Color="#B1BAC4"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="#D0D7DE"/>
    <SolidColorBrush x:Key="SubtleBorderBrush" Color="#E8EBEF"/>

    <!-- Accent -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0969DA"/>
    <SolidColorBrush x:Key="AccentDimBrush" Color="#218BFF"/>

    <!-- Severity -->
    <SolidColorBrush x:Key="OkBrush" Color="#1A7F37"/>
    <SolidColorBrush x:Key="OkDimBrush" Color="#2DA44E"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#9A6700"/>
    <SolidColorBrush x:Key="WarningDimBrush" Color="#BF8700"/>
    <SolidColorBrush x:Key="CriticalBrush" Color="#CF222E"/>
    <SolidColorBrush x:Key="CriticalDimBrush" Color="#FA4549"/>

    <!-- Progress bar backgrounds -->
    <SolidColorBrush x:Key="BarBackgroundBrush" Color="#E8EBEF"/>

    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollBarBrush" Color="#B1BAC4"/>

</ResourceDictionary>
