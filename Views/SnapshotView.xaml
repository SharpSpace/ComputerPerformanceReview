<UserControl x:Class="ComputerPerformanceReview.Views.SnapshotView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:ComputerPerformanceReview.Converters">
    <UserControl.Resources>
        <conv:SeverityToColorConverter      x:Key="SevColor"/>
        <conv:BoolToVisibilityConverter     x:Key="BoolVis"/>
        <conv:StringNotEmptyToVisibilityConverter x:Key="StrVis"/>
        <conv:DifficultyToColorConverter    x:Key="DiffColor"/>
    </UserControl.Resources>

    <Grid Background="{DynamicResource WindowBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header bar -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}"
                BorderThickness="0,0,0,1" BorderBrush="{DynamicResource BorderBrush}"
                Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="← Back" Style="{StaticResource SecondaryButton}"
                        Command="{Binding BackCommand}" Padding="12,5" FontSize="12"/>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="SNAPSHOT ANALYSIS" FontSize="15" FontWeight="SemiBold"
                               Foreground="{DynamicResource ForegroundBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusText}" FontSize="11"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               HorizontalAlignment="Center"/>
                    <!-- Comparison vs. last run — visible only when history exists -->
                    <TextBlock Text="{Binding ComparisonText}" FontSize="10"
                               Foreground="{DynamicResource AccentBrush}"
                               HorizontalAlignment="Center"
                               Visibility="{Binding HasComparison, Converter={StaticResource BoolVis}}"/>
                </StackPanel>

                <!-- Filter toggle (only shown when analysis is complete) -->
                <Button Grid.Column="2"
                        Content="{Binding FilterLabel}"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ToggleFilterCommand}"
                        Padding="12,5" FontSize="12"
                        Visibility="{Binding IsRunning, Converter={StaticResource BoolVis},
                                             ConverterParameter=invert}"/>
            </Grid>
        </Border>

        <!-- Progress bar (visible while running) -->
        <ProgressBar Grid.Row="1" Height="3"
                     Value="{Binding ProgressPercent}" Maximum="100"
                     Background="{DynamicResource BarBackgroundBrush}"
                     BorderThickness="0"
                     Visibility="{Binding IsRunning, Converter={StaticResource BoolVis}}">
            <ProgressBar.Foreground>
                <SolidColorBrush Color="#5E9BF0"/>
            </ProgressBar.Foreground>
        </ProgressBar>

        <!-- Results scroll area -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="12,8">
            <ItemsControl ItemsSource="{Binding FilteredGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" Margin="4,4,4,8">
                            <StackPanel>
                                <!-- Group title -->
                                <TextBlock Text="{Binding Title}" FontSize="11" FontWeight="SemiBold"
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           Margin="0,0,0,8"/>

                                <!-- Result rows -->
                                <ItemsControl ItemsSource="{Binding Items}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="0,6,0,6"
                                                    BorderThickness="0,0,0,1"
                                                    BorderBrush="{DynamicResource BorderBrush}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="4"/>
                                                        <ColumnDefinition Width="8"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Severity stripe -->
                                                    <Border Grid.Column="0" CornerRadius="2"
                                                            Background="{Binding Severity, Converter={StaticResource SevColor}}"
                                                            Margin="0,2,0,2"/>

                                                    <!-- Text content -->
                                                    <StackPanel Grid.Column="2">
                                                        <!-- CheckName + NEW / FIXED badges -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding CheckName}"
                                                                       FontWeight="SemiBold" FontSize="12"
                                                                       Foreground="{DynamicResource ForegroundBrush}"
                                                                       VerticalAlignment="Center"/>
                                                            <Border CornerRadius="3" Padding="4,1" Margin="6,0,0,0"
                                                                    VerticalAlignment="Center"
                                                                    Background="{DynamicResource AccentDimBrush}"
                                                                    Visibility="{Binding IsNew, Converter={StaticResource BoolVis}}">
                                                                <TextBlock Text="NEW" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                                            </Border>
                                                            <Border CornerRadius="3" Padding="4,1" Margin="6,0,0,0"
                                                                    VerticalAlignment="Center"
                                                                    Background="{DynamicResource OkDimBrush}"
                                                                    Visibility="{Binding IsFixed, Converter={StaticResource BoolVis}}">
                                                                <TextBlock Text="FIXED" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                                            </Border>
                                                        </StackPanel>
                                                        <TextBlock Text="{Binding Description}"
                                                                   FontSize="11" TextWrapping="Wrap"
                                                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                                   Margin="0,2,0,0"/>

                                                        <!-- Recommendation (only shown when not null/empty) -->
                                                        <Border Margin="0,5,0,0" Padding="8,5"
                                                                CornerRadius="4"
                                                                Background="{DynamicResource WarningDimBrush}"
                                                                Visibility="{Binding Recommendation, Converter={StaticResource StrVis}}">
                                                            <TextBlock Text="{Binding Recommendation}"
                                                                       FontSize="11" TextWrapping="Wrap"
                                                                       Foreground="White"/>
                                                        </Border>

                                                        <!-- Action steps -->
                                                        <ItemsControl ItemsSource="{Binding ActionSteps}"
                                                                      Visibility="{Binding HasActionSteps, Converter={StaticResource BoolVis}}"
                                                                      Margin="0,6,0,0">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border Margin="0,3,0,0" Padding="8,6"
                                                                            CornerRadius="4"
                                                                            Background="{DynamicResource CardBrush}"
                                                                            BorderBrush="{DynamicResource SubtleBorderBrush}"
                                                                            BorderThickness="1">
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                            </Grid.ColumnDefinitions>

                                                                            <!-- Left: title + command -->
                                                                            <StackPanel Grid.Column="0">
                                                                                <!-- Title with optional difficulty badge -->
                                                                                <StackPanel Orientation="Horizontal">
                                                                                    <Border CornerRadius="3" Padding="4,1" Margin="0,0,6,0"
                                                                                            VerticalAlignment="Center"
                                                                                            Visibility="{Binding Difficulty, Converter={StaticResource StrVis}}"
                                                                                            Background="{Binding Difficulty, Converter={StaticResource DiffColor}}">
                                                                                        <TextBlock Text="{Binding Difficulty}"
                                                                                                   FontSize="9" FontWeight="SemiBold"
                                                                                                   Foreground="White"/>
                                                                                    </Border>
                                                                                    <TextBlock Text="{Binding Title}"
                                                                                               FontSize="11"
                                                                                               Foreground="{DynamicResource ForegroundBrush}"
                                                                                               TextWrapping="Wrap"
                                                                                               VerticalAlignment="Center"/>
                                                                                </StackPanel>

                                                                                <!-- Command box (monospace, only when HasCommand) -->
                                                                                <Border Margin="0,5,0,0" Padding="7,4"
                                                                                        CornerRadius="3"
                                                                                        Background="{DynamicResource WindowBrush}"
                                                                                        BorderBrush="{DynamicResource BorderBrush}"
                                                                                        BorderThickness="1"
                                                                                        Visibility="{Binding HasCommand, Converter={StaticResource BoolVis}}">
                                                                                    <TextBlock Text="{Binding Command}"
                                                                                               FontFamily="Consolas,Courier New,monospace"
                                                                                               FontSize="11"
                                                                                               Foreground="{DynamicResource AccentBrush}"
                                                                                               TextWrapping="Wrap"/>
                                                                                </Border>
                                                                            </StackPanel>

                                                                            <!-- Right: Copy + Run buttons (only when HasCommand) -->
                                                                            <StackPanel Grid.Column="1"
                                                                                        Orientation="Horizontal"
                                                                                        VerticalAlignment="Top"
                                                                                        Margin="8,0,0,0"
                                                                                        Visibility="{Binding HasCommand, Converter={StaticResource BoolVis}}">
                                                                                <Button Content="Copy"
                                                                                        Style="{StaticResource SecondaryButton}"
                                                                                        Command="{Binding CopyCommand}"
                                                                                        Padding="8,4" FontSize="11"
                                                                                        Margin="0,0,4,0"/>
                                                                                <Button Content="▶ Run"
                                                                                        Style="{StaticResource PrimaryButton}"
                                                                                        Command="{Binding RunCommand}"
                                                                                        Padding="8,4" FontSize="11"/>
                                                                            </StackPanel>
                                                                        </Grid>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>

                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
