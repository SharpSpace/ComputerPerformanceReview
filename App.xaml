<Application x:Class="ComputerPerformanceReview.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ComputerPerformanceReview.ViewModels"
             xmlns:views="clr-namespace:ComputerPerformanceReview.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Index 0: Theme (swapped at runtime) -->
                <ResourceDictionary Source="Themes/DarkTheme.xaml"/>
                <!-- Index 1: Shared styles -->
                <ResourceDictionary Source="Themes/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- View-ViewModel mappings -->
            <DataTemplate DataType="{x:Type vm:StartupViewModel}">
                <views:StartupView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:MonitorViewModel}">
                <views:MonitorView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SnapshotViewModel}">
                <views:SnapshotView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
